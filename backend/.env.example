# MongoDB Configuration
# IMPORTANT: For Docker Compose, use "mongo" (service name) instead of "localhost"
MONGO_URL="mongodb://mongo:27017"
DB_NAME="troa_residence"

# CORS Configuration
CORS_ORIGINS="*"

# Backend URL (for local: use http://localhost:8001)
REACT_APP_BACKEND_URL=http://localhost:8001

# Google OAuth Configuration (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Secret Key (change this in production!)
SECRET_KEY=your-secret-key-change-in-production

# Instagram Configuration (Optional - for Instagram feed widget)
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# Razorpay Configuration (Get from Razorpay Dashboard)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Basic Auth Configuration (for protected routes)
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=your-secure-password

# Chatbot Configuration (Optional - Emergent LLM Key for AI features)
EMERGENT_LLM_KEY=your-emergent-llm-key
